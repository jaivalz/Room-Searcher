<%= form_tag search_path, method: :get do %>
  <div class="row">
    <br>
    <div class="col s12 m6 l3">
      <%= text_field_tag :search, params[:search], placeholder: "Búsqueda", class: "form-control" %>
    </div>
    <div class="col s12 m6 l3">
      <%= text_field_tag :start_date, params[:start_date], placeholder: "Desde el día", class: "form-control" %>
    </div>
    <div class="col s12 m6 l3">
      <%= text_field_tag :end_date, params[:end_date], placeholder: "Hasta el día", class: "form-control" %>
    </div>
    <div class="col s12 m6 l3">
      <%= submit_tag "Buscar", class: "btn btn-primary wide" %>
    </div>

  </div>
<% end %>

<div class="row">

  <div class="col s12 m8 l12">
    <% @rooms.each do |room| %>
    <div class="col s12 m6 l4">
      <div class="card">
      <div class="card-image waves-effect waves-block waves-light">
        <img class="activator card-tam" <%= image_tag room.photos[0].image.url(:medium) %>
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4"><%= link_to room.listing_name, room %></span>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4"><i class="material-icons right">close</i></span>
        <p><%= room.summary %></p>
      </div>
    </div>
    </div>
    <% end %>
  </div>

</div>

<script>
	$(function() {
		$("#start_date").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#end_date').datepicker("option", "minDate", selected);
				$('#end_date').attr('disabled', false);
			}
		});

		$("#end_date").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#start_date').datepicker("option", "maxDate", selected);
			}
		});
	})


</script>
