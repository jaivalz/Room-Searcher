<div class="row">
	<div class="col s12 m4 l3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Tu listado", rooms_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item"><%= link_to "Tus reservas", rooms_path, class: "sidebar-link" %></li>
		</ul>
	</div>
  <br />
	<div class="col s12 m8 l9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Listado
			</div>
			<div class="panel-body">

				<% @rooms.each do |room| %>
					<div class="row">
            <br />
						<div class="col s12 m4 l2">
							<%= image_tag room.photos[0].image.url(:thumb) if room.photos.length > 0 %>
						</div>
						<div class="col s12 m4 l8">
							<h4><%= room.listing_name %></h4>
						</div>
            <br />
						<div class="col s12 m4 l2">
							<%= link_to "Editar", edit_room_path(room), class: "btn btn-primary indigo" %>
						</div>
					</div>
				<% end %>

			</div>
		</div>
	</div>
</div>
