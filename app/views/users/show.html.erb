<div class="row">
      <div class="col s12 m4 l3">
        <div class="card">
            <div class="card-image">
              <img src="http://www.lawyersweekly.com.au/images/LW_Media_Library/594partner-profile-pic-An.jpg">
              <span class="card-title"></span>
            </div>
            <div class="card-content">
              <span><%= @user.fullname %></span>
            </div>
            <div class="card-action">
              <% if current_user != @user %>
              <%= link_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post', class: "btn btn-primary wide" %>
              <% else %>
              <%= link_to "Editar perfil", edit_user_registration_path, class: "btn btn-primary wide" %>

              <% end %>
            </div>
            <div class="card-content">
              Email Address<br>
      				Phone Number
            </div>
          </div>
      </div>

      <div class="col s12 m8 l9">
        <% @rooms.each do |room| %>
        <div class=" col s12 m6">
          <div class="card">
          <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" <%= image_tag room.photos[0].image.url(:medium) %>
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4"><%= link_to room.listing_name, room %></span>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><%= link_to room.listing_name, room %><i class="material-icons right">close</i></span>
            <p><%= room.summary %></p>
          </div>
        </div>
        </div>
        <% end %>
      </div>
      </div>

  </div>
